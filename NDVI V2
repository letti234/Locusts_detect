.filter(ee.Filter.eq("ADM0_NAME", "Ethiopia"));

//Clipped MODIS NDVI data
var modis = ee.ImageCollection('MODIS/061/MOD13Q1')
                  .map(function(image){return image.clip(ETH)});


var ndvi = modis.select('NDVI');
///print(ndvi,"MODIS NDVI raw");

